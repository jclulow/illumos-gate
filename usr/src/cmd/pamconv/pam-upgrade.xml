<service_bundle type='manifest' name='SUNWcsr:pam-upgrade'>

<service
	name='system/pam-upgrade'
	type='service'
	version='1'>

	<create_default_instance enabled='true' />

	<single_instance />

	<dependency
		name='filesystem'
		grouping='require_all'
		restart_on='none'
		type='service'>
		<service_fmri value='svc:/system/filesystem/local'/>
	</dependency>

	<exec_method
		type='method'
		name='stop'
		exec=':true'
		timeout_seconds='60' >
	</exec_method>

	<exec_method
		type='method'
		name='start'
		exec='/lib/svc/method/pamconv %m'
		timeout_seconds='120' >
	</exec_method>

	<property_group
		name='startd'
		type='framework'>
		<propval name='duration' type='astring' value='transient' />
	</property_group>

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>pam-upgrade</loctext>
		</common_name>
		<description>
			<loctext xml:lang='C'>
pam-upgrade handles the conversion of a legacy, monolithic /etc/pam.conf file
into /etc/pam.d per-service shard files.
			</loctext>
		</description>
		<documentation>
			<manpage title='pam.conf' section='4'
				manpath='/usr/share/man' />
		</documentation>
	</template>
</service>

</service_bundle>
